  <class_name>SetInfiltrationWeatherDriven</class_name>
  <display_name>Set Infiltration (Weather-Driven)</display_name>
  <description>
    Sets space infiltration using a base flow per exterior surface area and scales it using outdoor temperature difference and wind speed from the EPW weather file.
  </description>
  <modeler_description>
    Updates (or creates) SpaceInfiltrationDesignFlowRate objects. Uses Flow per Exterior Surface Area as the base method and sets coefficients A, B, C, D for weather dependence:
    V = Vdesign * (A + B|ΔT| + C*Wind + D*Wind^2).
  </modeler_description>
  <arguments>
    <argument>
      <name>flow_per_area</name>
      <display_name>Base Flow per Exterior Surface Area (m3/s per m2 exterior)</display_name>
      <type>Double</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>0.000226</default_value>
    </argument>
    <argument>
      <name>const_coeff</name>
      <display_name>Constant Term Coefficient (A)</display_name>
      <type>Double</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>1</default_value>
    </argument>
    <argument>
      <name>temp_coeff</name>
      <display_name>Temperature Term Coefficient (B) multiplying |ΔT| [1/K]</display_name>
      <type>Double</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>0</default_value>
    </argument>
    <argument>
      <name>wind_coeff</name>
      <display_name>Wind Speed Term Coefficient (C) multiplying Wind [s/m]</display_name>
      <type>Double</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>0</default_value>
    </argument>
    <argument>
      <name>wind2_coeff</name>
      <display_name>Wind Speed Squared Term Coefficient (D) multiplying Wind^2 [s^2/m^2]</display_name>
      <type>Double</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>0</default_value>
    </argument>
    <argument>
      <name>create_if_missing</name>
      <display_name>Create infiltration objects if none exist</display_name>
      <type>Boolean</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>true</default_value>
      <choices>
        <choice>
          <value>true</value>
          <display_name>true</display_name>
        </choice>
        <choice>
          <value>false</value>
          <display_name>false</display_name>
        </choice>
      </choices>
    </argument>
  </arguments>
